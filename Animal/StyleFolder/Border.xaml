<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="BackgroundBorder">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#101C42"/>
        <Setter Property="Width" Value="820"/>
    </Style>
    <Style TargetType="Border" x:Key="BorderControl">
        <Setter Property="Background" Value="#101C42"/>
        <Setter Property="CornerRadius" Value="20 0 0 0"/>
    </Style>
</ResourceDictionary>